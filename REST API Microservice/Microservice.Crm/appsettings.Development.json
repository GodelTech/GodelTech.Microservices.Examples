{
  "IdentityConfiguration": {
    "Issuer": "http://reviewiteasy",
    "PublicAuthorityUri": "http://localhost:3000",
    "AuthorityUri": "http://localhost:3000",
    "Audience": "inspector",
    "ClientId": "rie_inspector",
    "ClientSecret": "XXXxxx",
    "Scopes": "w.events.m"
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "SourceContext like 'Microsoft.EntityFrameworkCore%'"
        }
      }
    ],
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Filters.Expressions"
    ],
    "Enrich": [
      "WithThreadId",
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss,fff} [{ThreadId}] {Level} {Message:l}{NewLine}{Exception}"
        }
      }
    ]
  }
}
