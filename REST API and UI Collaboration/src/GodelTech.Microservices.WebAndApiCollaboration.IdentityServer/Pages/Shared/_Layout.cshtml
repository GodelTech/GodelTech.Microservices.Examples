<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GodelTech.Microservices.UiRazorPages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="header">
        <a href="https://github.com/IdentityServer">
            <img class="logo" src="~/icon.jpg" alt="Logo" />
        </a>
        <a href="https://www.godeltech.com">
            <img class="logo" src="https://www.godeltech.com/wp-content/themes/godeltech/img/logo.svg" alt="Logo" />
        </a>
    </header>
<div class="container">
    <div>
        <h1 class="text-center">Godeltech microservices collaboration example.</h1>
        <h3 class="text-center">Welcome to Identity server</h3>
    </div>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - GodelTech.Microservices.UiRazorPages - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@RenderSection("Scripts", required: false)
</body>
</html>