<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GodelTech.Microservices.UiRazorPages</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header class="header">
    <a href="https://www.godeltech.com">
        <img class="logo" src="https://www.godeltech.com/wp-content/themes/godeltech/img/logo.svg" alt="Logo"/>
    </a>
    <div class="header-left">
        <a class="active" asp-page="./Index">Home</a>
        <a asp-page="./Privacy">Protected api resource</a>
    </div>
    <div class="header-right">
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-page="./Account" asp-page-handler="logout">Logout</a>
        }
        else
        {
            <a asp-page="./Account" asp-page-handler="login">Login</a>
        }
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - GodelTech.Microservices.UiRazorPages - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@RenderSection("Scripts", required: false)
</body>
</html>
